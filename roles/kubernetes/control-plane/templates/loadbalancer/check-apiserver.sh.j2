#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:6443/ -o /dev/null || errorExit "Error GET https://localhost:6443/"
if ip addr | grep -q {{ loadbalancer_apiserver.address }}; then
    curl --silent --max-time 2 --insecure https://{{ loadbalancer_apiserver.address }}:{{ loadbalancer_apiserver.port }}/ -o /dev/null || errorExit "Error GET https://{{ loadbalancer_apiserver.address }}:{{ loadbalancer_apiserver.port }}/"
fi