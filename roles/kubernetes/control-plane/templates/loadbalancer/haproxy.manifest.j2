apiVersion: v1
kind: Pod
metadata:
  name: haproxy
  namespace: kube-system
  labels:
    addonmanager.kubernetes.io/mode: Reconcile
    k8s-app: kube-haproxy
spec:
  hostNetwork: true
  dnsPolicy: ClusterFirstWithHostNet
  nodeSelector:
    kubernetes.io/os: linux
  priorityClassName: system-node-critical
  containers:
  - name: haproxy
    image: {{ registry_host }}/cloudtogo/haproxy:2.1.4
    imagePullPolicy: {{ k8s_image_pull_policy }}
    volumeMounts:
    - mountPath: /usr/local/etc/haproxy/haproxy.cfg
      name: etc-haproxy
      readOnly: true
  volumes:
  - name: etc-haproxy
    hostPath:
      path: {{ loadbalancer_config_dir }}/haproxy.cfg
      type: FileOrCreate
